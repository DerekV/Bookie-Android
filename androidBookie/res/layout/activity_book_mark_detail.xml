<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/bookmarkDetailTextviewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:padding = "5dip"/>

        <TextView
            android:id="@+id/bookmarkDetailTextviewUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" />
<!-- 
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             /> -->

        <TextView
            android:id="@+id/bookmarkDetailTextviewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" />

        <TextView
            android:id="@+id/bookmarkDetailTextviewStored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" />

        <TextView
            android:id="@+id/bookmarkDetailTextviewTotalClicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" />
        
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/bookmarkDetailTagTable"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center" >
        </TableLayout>
    </ScrollView>

</LinearLayout>
